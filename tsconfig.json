{
  "extends": "@tsconfig/node22/tsconfig.json", // Use the Node.js 22 configuration as a base
  "compilerOptions": {
    "outDir": "./dist", // Output directory for compiled files
    "rootDir": "./src", // Root directory of the source files
    "forceConsistentCasingInFileNames": true // Ensure file names are case-sensitive
  },
  "include": ["src/**/*"], // Include all TypeScript files in the src directory
  "exclude": ["node_modules", "dist"], // Exclude node_modules and dist directories
  "ts-node": {
    "files": true // Include all files in ts-node execution
  }
}
